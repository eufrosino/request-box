<p><h1><strong>Inspecting box: </strong>[{{id}}]</h1></p>
<p><h5><strong>Box expires in: </strong>{{ttl}}</h5></p>

{{#if requests}}
  {{#each requests}}
    <p><h1 style="text-align:center"><strong>-----</strong></h1></p>
    <p><h4><strong>Method: </strong>{{method}}</h4></p>
    <p><h4><strong>Time: </strong>{{time}}</h4></p>
    <h4><strong>Body: </strong></h4>
      <ul class="list-group">
        <li class="list-group-item">
          {{#each body}}
            <p="list-group-item"><strong>{{@key}}: </strong>{{this}}</p>
          {{/each}}
        </li>
      </ul>
    <h4><strong>Headers: </strong></h4>
    <ul class="list-group">
      <li class="list-group-item">
        {{#each headers}}
          <p="list-group-item"><strong>{{@key}}: </strong>{{this}}</p>
        {{/each}}
      </li>
    </ul>
  {{/each}}
  {{else}}
  <p><h1 style="text-align:center"><strong>-----</strong></h1></p>
  <h3>No requests yet</h3>
{{/if}}

